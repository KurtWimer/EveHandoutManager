<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fleetConfigItem"
            type="com.example.evehandoutmanager.fleetConfiguration.FleetConfigItem" />
        <variable
            name="removeListener"
            type="com.example.evehandoutmanager.fleetConfiguration.FleetRemoveListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ValueTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_medium"
                android:text="@string/isk_value"
                app:layout_constraintEnd_toStartOf="@id/iskValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/iskValue"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginStart="@dimen/padding_small"
                android:text="@{String.valueOf(fleetConfigItem.iskValue)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ValueTextField"
                app:layout_constraintTop_toTopOf="@id/ValueTextField" />

            <TextView
                android:id="@+id/ShipNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_medium"
                android:text="@string/ship_name"
                app:layout_constraintStart_toEndOf="@id/iskValue"
                app:layout_constraintTop_toTopOf="@id/ValueTextField" />

            <TextView
                android:id="@+id/shipName"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginStart="@dimen/padding_small"
                android:text="@{fleetConfigItem.shipName}"
                app:layout_constraintStart_toEndOf="@id/ShipNameText"
                app:layout_constraintTop_toTopOf="@id/ValueTextField"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_medium"
                android:backgroundTint="@color/design_default_color_background"
                android:contentDescription="@string/remove_handout"
                android:onClick="@{() -> removeListener.onClick(fleetConfigItem)}"
                app:layout_constraintBottom_toBottomOf="@+id/ValueTextField"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/shipName"
                app:layout_constraintTop_toTopOf="@id/ValueTextField"
                app:srcCompat="@drawable/ic_baseline_remove_circle_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
